    <a href="/" class="brand-logo left">Tender</a> 
    <ul id="nav-mobile" class="right hide-on-med-and-down" style="margin-left:1000px">
      <li><a href="register">REGISTER</a></li>
      <li><a href="/">HOME</a></li>
    </ul>
