<div class="container">
  <div class="containerRegister">
      <div class="row">
        <div class="input-field col s6 ">
          <!-- <div class="panel panel-default"> -->
            <div class="panel-heading ">
              <h3 class="panel-title font">Register</h3>
              <a class="hover" style="margin-left:24px" href="login">Already a member?</a>
            </div>
            <div class="panel-body">
              <form action="/users" method="post" enctype="multipart/form-data">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <fieldset class="z-depth-1">
                <div class="form-group">
                  <input class="form-control validate" name="user[first_name]" type="text" placeholder="First Name">
                </div>
                <div class="form-group">
                  <input class="form-control validate" placeholder="Last Name" name="user[last_name]" type="text">
                </div>
                <div class="form-group">
                  <input class="form-control validate" placeholder="Email" name="user[email]" type="email">
                </div>
                <div class="form-group">
                  <input class="form-control validate" placeholder="Height(in inches)" name="user[height]" type="number" step="any">
                </div>
                <div class="form-group">
                  <input class="form-control validate" placeholder="Nationality" name="user[nationality]" type="text">
                </div>
                <div class="form-group">
                  <select name="user[sex]">
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                  </select>
                </div>
                <div class="form-group">
                  <select name="user[city]">
                    <% cities.each do |city| %>
                      <option value="<%= city %>"><%= city %></option>
                    <% end %>
                  </select>
                </div>
                <div class="form-group">
                  <select name="user[state]">
                    <% us_states.each do |state| %>
                      <option value="<%= state %>"><%= state %></option>
                    <% end %>
                  </select>
                </div>
                <div class="form-group">
                  <input class="form-control validate" placeholder="Birthday" name="user[birthday]" type="date">
                </div>
                <div class="form-group">
                  <input class="form-control validate" placeholder="Password" name="user[password]" type="password">
                </div>
                <div class="form-group">
                  <input class="form-control validate" placeholder="Confirm Password" name="user[password_confirmation]" type="password">
                </div>
                <div class="form-group">
                  <div class="file-field input-field">
                    <div class="btn light-blue accent-1 waves-light">
                      <span>File</span>
                      <input type="file" class="form-control validate" name="user[avatar]">
                    </div>
                    <div class="file-path-wrapper">
                      <input class="file-path validate" type="text" placeholder="Upload your pictures">
                    </div>
                  </div>
                    <!-- </div>
                  </div> -->
                </div>
                <input class="btn waves-light btn-large light-blue accent-1" type="submit" value="Register">
                </fieldset>
              </form>
              
            </div>
        <!-- </div> -->
      </div>
    </div>
  </div>
  </div>
  <script type="text/javascript">
    $('select:not([multiple])').material_select();
  </script>